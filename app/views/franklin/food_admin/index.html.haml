
.container-fluid
	.row
		.col-xs-10
			%ul.breadcrumb
				%li
					= link_to 'Admin', main_app.admin_index_path
				%li
					%strong
						Food Admin
						= "(#{pluralize @foods.total_count, 'Food'})"

		.col-xs-2
			%a.btn.btn-success{ href: '#TODO?' }
				%i.fa.fa-plus-square
				New

	.row
		.col-xs-6
			= raw paginate @foods
		.col-xs-6
			= form_tag user_food_admin_index_path, method: :get, class: 'pull-right form-inline' do
				= text_field_tag :q, params[:q], class: 'form-control'
				= submit_tag 'Search', class: 'btn btn-primary'
				= link_to 'Clear', user_food_admin_index_path, class: 'btn btn-default btn-xs'

	.row
		%table.table.table-striped
			%thead
				%th
					Name
				%th
				%th




			%tbody
				- @foods.each do |food|
					%tr
						
						%td
							= food.name
						%td
							= food.user.avatar_tag width: 24

							= food.user
							said: 
							= "'#{food.content}'"
							from
							= food.source
							.response{ style: 'margin-left:2em;margin-top:1em;' }
								I:
								= food.system_notes
						%td
							.time-ago
								%i.fa.fa-clock-o
								= time_ago_in_words food.created_at
								ago.
								%br
								= food.created_at.to_s( :slashed_time )
